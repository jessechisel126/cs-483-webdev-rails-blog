<h1>All Users</h1>

<% if @users.present? %>
  <table>
    <tr>
      <th>Username</th>
      <th>Account Type</th>
      <th>Posts Written</th>
      <th>Comments Written</th>
      <th colspan="<%= admin? ? 2 : 1 %>"></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.type %></td>
        <td class="center"><%= user.blog_posts.count %></td>
        <td class="center"><%= user.comments.count %></td>
        <td><%= link_to 'Profile', user %></td>
        <% if admin? %>
          <td><%= link_to 'Delete', user,
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>No users signed up!</p>
<% end %>
<div class="bottom-link"><%= link_to "<- Home", root_path %></div>