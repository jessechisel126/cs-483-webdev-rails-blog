<h1>All Users</h1>

<% if @users.present? %>
  <table>
    <tr>
      <th>Username</th>
      <th>Account Type</th>
      <% if admin? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.type %></td>
        <td><%= link_to 'Profile', user %></td>
        <% if admin? %>
          <td><%= link_to 'Delete', user_path(user),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>No users signed up!</p>
<% end %>