<h1>All Users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Password</th>
    <th colspan="2"></th>
  </tr>
 
  <!-- For each user, create a table row and display info as well as show, edit and delete links -->
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td>[ENCRYPTED]</td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Delete', user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>