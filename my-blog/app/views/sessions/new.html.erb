<% if flash[:success] %>
  <%= flash[:success] %>
<% end %>

<% if flash[:danger] %>
  <%= flash[:danger] %>
<% end %>

<h1>Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>
  
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Sign Up', new_user_path %>