<!-- Header for every page in our app -->

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "My Blog", '/', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "New Blog Post", new_blog_post_path %></li>
        <% end %>
        <li><%= link_to "Blog Posts", blog_posts_path %></li>
        <li><%= link_to "Users", users_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Change Password", edit_user_path(current_user) %></li>
              <% if admin? %>
                <li><%= link_to "Add Admin", signup_path %></li>
              <% end %>
              <li class="divider"></li>
              <li><%= link_to "Log Out", logout_path, method: "delete" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log In", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>